<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Pages.Le.BackgroundPage"
             Title="BLE Background Config">

    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Settings">
                    <EntryCell Label="Scan Service UUID" Text="{Binding ServiceUuid}" />
                    <SwitchCell Text="Is Enabled" On="{Binding IsEnabled}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>